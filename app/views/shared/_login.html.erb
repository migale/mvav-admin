<h1>Login</h1>
<%= form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f| %>
   <%= render "shared/error_messages", :target => @user_session %>
   <p><%= f.label :login %><br /><%= f.text_field :login %></p>
  <p><%= f.label :password %><br /><%= f.password_field :password %></p>
  <p><%= f.submit 'Login' %></p>
<% end %>